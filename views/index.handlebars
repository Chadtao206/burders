<div class="container">
    <div class="row" style="justify-content: center;">
        <h1><i class="fas fa-utensils"></i>&nbsp;&nbsp;Burgers!&nbsp;&nbsp;<i class="fas fa-utensils"></i></h1>
    </div>
    <div class="div"><img style="display: block; margin:auto;width: 40%;" height="200px" src="/assets/img/burger.png" alt=""></div>
    <br><br>
    <div class="row">
        <div class="col-lg-6">
            <h2 style="text-align:center">Burgers To Eat</h2>
            <hr><br>
            <ul style="list-style-type: none;">
                {{#each burgers}}
                <li>
                    {{#unless devoured}}
                    {{burger_name}}
                    <button style="margin:5px;" class="devour btn btn-sm btn-primary" data-id="{{id}}" data-devour="{{devoured}}">
                        {{#if devoured}}Order Again!{{else}}Devour!{{/if}}
                    </button>
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-lg-6">
            <h2 style="text-align:center">Burgers Eaten</h2>
            <hr><br>
            <ul style="list-style-type: none;">
                {{#each burgers}}
                <li>
                    {{#if devoured}}
                    {{burger_name}}
                    <button style="margin:5px;" class="devour btn btn-sm btn-primary" data-id="{{id}}" data-devour="{{devoured}}">
                        {{#if devoured}}Order Again!{{else}}Devour!{{/if}}
                    </button>
                    {{/if}}
                </li>
                {{/each}}
            </ul>

        </div>
    </div>

</div>